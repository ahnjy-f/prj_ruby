<% @title = "Member List" %>
<h1><%= @title %></h1>

<div class="container">
    <div class="row">
        <% @member.each do |m| %>
            <div class="col-3">
                <div><%= link_to(image_tag(m.face_photo_path+".jpg", class:"icon rounded-circle", width:"100px",height:"100px"), m.id.to_s+"/detail") %></div>
                <%= m.last_name %> <%= m.first_name %>
                <p><%= m.one_word_comment %></p>
            </div>
        <% end %>
    </div>
    <%= paginate @member %>
</div>
